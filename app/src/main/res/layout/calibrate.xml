<LinearLayout android:id="@+id/calibLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android">
  
	<TextView android:text="Y Range:"
			android:id="@+id/calibY"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	
	<CheckBox android:text="@string/invert"
			android:id="@+id/invert"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
					
	<TextView android:text="X Range:"
			android:id="@+id/calibX"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
			
	<Button android:text="@string/calibChange"
			android:id="@+id/calibChange"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
			
</LinearLayout>
